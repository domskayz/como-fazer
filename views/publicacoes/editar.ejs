<%-include('../header')%>

<form action="/publicacoes/editar/<%=categoria%>/<%=publicacao.id%>" method="post" >

    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input
                value="<%= publicacao.titulo %>"
                class="form-control"
                id="titulo"
                placeholder="Digite o Titulo"
                name="titulo"
        >
    </div>

    <div class="form-group">
        <label for="titulo">Categoria</label>
        <textarea
                class="form-control"
                id="conteudo"
                name="conteudo"
                placeholder="Digite o Conteudo"
        ><%= publicacao.conteudo%></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>

</form>

<%-include('../footer')%>
